{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>CookingTime</th>
                <td>{{ recipe.cookingTime }}</td>
            </tr>
            <tr>
                <th>Preparation</th>
                <td>{{ recipe.preparation }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ recipe.level }}</td>
            </tr>
            <tr>
                <th>Peuple</th>
                <td>{{ recipe.peuple }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recipes_index') }}">back to list</a>

    <a href="{{ path('recipes_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipes/_delete_form.html.twig') }}
{% endblock %}
