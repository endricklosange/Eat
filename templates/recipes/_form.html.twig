<div class="justify-content-start">
    {{ form_start(form) }}
    <div class="form-group col col-lg-6 col-md-12 mx-auto">
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group col col-lg-6 col-md-12 mx-auto">
        {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group col col-lg-6 col-md-12 mx-auto">
        {{ form_row(form.cookingTime, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group col col-lg-6 col-md-12 mx-auto">
        {{ form_row(form.preparation, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group col col-lg-6 col-md-12 mx-auto">
        {{ form_row(form.level, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group col col-lg-6 col-md-12 mx-auto">
        {{ form_row(form.peuple, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group col col-lg-6 col-md-12 mx-auto">
        {{ form_row(form.categories, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group col col-lg-6 col-md-12 mx-auto">
        {{ form_row(form.imageFile, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group pb-2 col pt-5 col-lg-6 col-md-12 mx-auto">
        <button class="btn btn-primary btn-lg w-100">{{ button_label|default('Poster') }}</button>
    </div>
    {{ form_end(form) }}
</div>
